    <RelativeLayout
        android:background="#55000000"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/list_item_meetup"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:background="@color/buttonColor"
            android:src="@drawable/book_placeholder_image"
            android:id="@+id/poster"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        
        <TextView

            android:layout_marginTop="5dp"
            android:layout_below="@id/poster"
            android:id="@+id/border_one"
            android:background="#88000000"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        
        <TextView
            android:textColor="@color/white"
            android:textSize="22sp"
            android:id="@+id/meetup_name"
            android:layout_marginTop="0dp"
            android:layout_alignParentRight="true"
            android:text="Meetup Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignLeft="@id/poster"
            android:layout_alignRight="@id/poster"
            android:layout_alignBottom="@id/poster"
            android:padding="5dp"
            android:background="#88000000"
            android:textColor="@color/white"
            android:paddingTop="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="5dp"
            android:id="@+id/distance"
            android:text="4.3 Km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/white"
            android:layout_toRightOf="@id/poster"
            android:padding="5dp"
            android:gravity="right"
            android:layout_alignBottom="@id/poster"
            android:id="@+id/venue"
            android:text="Venue Address"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:padding="5dp"
            android:gravity="right"
            android:layout_below="@id/meetup_name"
            android:layout_toRightOf="@id/poster"
            android:text="23 July 2016 : 5:34 PM"
            android:id="@+id/date_and_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:visibility="gone"
            android:paddingTop="5dp"
            android:layout_alignBottom="@id/distance"
            android:layout_alignParentRight="true"
            android:layout_below="@id/border_one"
            app:srcCompat="@drawable/ic_more_vert_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


