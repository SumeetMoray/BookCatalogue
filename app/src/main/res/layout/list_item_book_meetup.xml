<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginEnd="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:background="@color/buttonColor"
            android:src="@drawable/book_placeholder_image"
            android:id="@+id/poster"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/poster"
            android:id="@+id/border_one"
            android:background="#88000000"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        
        <TextView
            android:textSize="22sp"
            android:id="@+id/meetup_name"
            android:layout_marginTop="10dp"
            android:layout_below="@id/border_one"
            android:text="Meetup Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:id="@+id/venue"
            android:layout_marginTop="0dp"
            android:layout_below="@id/meetup_name"
            android:text="Venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:padding="5dp"
            android:textColor="@color/white"
            android:background="#88000000"
            android:layout_alignBottom="@id/poster"
            android:id="@+id/meetup_purpose"
            android:text="Purpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />





        <TextView
            android:gravity="end"
            android:textColor="@color/white"
            android:background="#aa000000"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:padding="5dp"
            android:text="23 July 2016 : 5:34 PM"
            android:id="@+id/date_and_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="#aa000000"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5sp"
            android:id="@+id/distance"
            android:text="4.3 Km |"
            android:layout_toLeftOf="@id/date_and_time"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:layout_alignTop="@id/date_and_time"
            android:layout_alignBottom="@id/date_and_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:visibility="gone"
            android:paddingTop="5dp"
            android:layout_alignBottom="@id/distance"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/border_one"
            app:srcCompat="@drawable/ic_more_vert_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</android.support.v7.widget.CardView>