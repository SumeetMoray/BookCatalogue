<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".addItems.ItemCategories.AddItemCategory"
        tools:showIn="@layout/activity_add_item_category">


        <RelativeLayout
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:background="#7737474F"
                android:scaleType="centerCrop"
                android:id="@+id/uploadImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_view_height" />

            <TextView
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:id="@+id/textChangePicture"
                android:textSize="25sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="#88000000"
                android:textColor="#ffffff"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meetup Poster" />


            <ImageView
                android:paddingBottom="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:foregroundGravity="right"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/ic_nature_people_white_48px"
                android:id="@+id/changePicture"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/removePicture"
            android:textStyle="normal"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Picture"/>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/meetupName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Meetup Name"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/purpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Describe Purpose for Meetup"/>

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Venue Address"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:background="@color/blueGrey800"
            android:text="Enter Location Coordinates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/latitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Latitude"/>

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/longitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Longitude"/>

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:id="@+id/pick_location_button"
            android:textColor="@color/white"
            android:background="@color/gplus_color_1"
            android:padding="7dp"
            android:text="Pick Location From Map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:background="@color/blueGrey800"
            android:text="Enter Date and Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="10dp"
                android:id="@+id/set_date"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/phonographyBlue"
                android:text="Set Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <TextView
                android:id="@+id/set_time"
                android:padding="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/phonographyBlue"
                android:text="| Set Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

        
        <TextView
            android:background="#88000000"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:text="Date and Time"
            android:textSize="17sp"
            android:padding="10dp"
            android:id="@+id/date_time_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:background="#88000000"
            android:layout_width="match_parent"
            android:layout_height="1dp" />



        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/addButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Meetup"
            android:textColor="@color/white"
            android:background="@color/phonographyBlue"/>

    </LinearLayout>

</ScrollView>