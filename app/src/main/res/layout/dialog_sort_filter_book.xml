<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/dialog_dismiss_icon"
            app:srcCompat="@drawable/ic_clear_black_24px"
            android:layout_width="50dp"
            android:layout_height="50dp" />


        <TextView
            android:gravity="center"
            android:id="@+id/header_title"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:textSize="24dp"
            android:text="Sort / Filter Books "
            android:layout_alignTop="@id/dialog_dismiss_icon"
            android:layout_alignBottom="@id/dialog_dismiss_icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="#88000000"
            android:layout_alignLeft="@id/dialog_dismiss_icon"
            android:layout_alignTop="@id/dialog_dismiss_icon"
            android:layout_alignBottom="@id/dialog_dismiss_icon"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>


        <TextView
            android:id="@+id/text_sortby"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/header_title"
            android:text="Sort By "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/border_zero"
            android:background="#88000000"
            android:layout_marginTop="10dp"
            android:layout_below="@id/text_sortby"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:id="@+id/sort_bar"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:layout_below="@id/border_zero"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sort_by_title"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="#22000000"
                android:text="Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:background="#88000000"
                android:textColor="@color/white"

                android:id="@+id/sort_by_rating"
                android:layout_marginLeft="2dp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_below="@id/sort_bar"
            android:id="@+id/sort_row_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="#22000000"

                android:layout_marginTop="2dp"
                android:id="@+id/sort_by_release_date"
                android:layout_below="@id/sort_bar"
                android:layout_marginRight="2dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Date of Publish"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/border_one"
            android:background="#88000000"
            android:layout_marginTop="10dp"
            android:layout_below="@id/sort_row_two"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:id="@+id/sort_row_three"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:layout_below="@id/border_one"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="#88000000"
                android:textColor="@color/white"

                android:id="@+id/sort_ascending"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Ascending"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sort_descending"
                android:layout_marginLeft="5dp"
                android:background="#22000000"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Descending"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <TextView
            android:id="@+id/border_two"
            android:background="#88000000"
            android:layout_marginTop="10dp"
            android:layout_below="@id/sort_row_three"
            android:layout_width="match_parent"
            android:layout_height="1dp" />



        <LinearLayout
            android:id="@+id/login_button_row"
            android:layout_marginTop="10dp"
            android:layout_below="@id/border_two"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/apply_button"
                android:textColor="@color/white"
                android:background="@color/blueGrey800"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:text="Apply"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:id="@+id/cancel_button"
                android:textColor="@color/white"
                android:background="@color/deepOrange900"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:text="Cancel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </RelativeLayout>

</ScrollView>